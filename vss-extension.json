{
    "manifestVersion": 1,
    "id": "ostorlab-azure-security-scanner",
    "name": "ostorlab-azure-security-scanner",
    "description": "Ostorlab scans mobile applications (Android APK, AAB, iOS IPA) for security and privacy issues. It provides full coverage by detecting issues on both the client-side and service-side, covering both the application code and all of its dependencies.\n\nOstorlab supports all major frameworks, both native and multi-platform. This includes Java, Kotlin, Objective C, Swift, Flutter, Cordova, React Native, Ionic and Xamarin.\n\nOstorlab provides both static and dynamic analysis capabilities, detecting over 500 vulnerability classes, like hardcoded secrets, privacy data leakage, untrusted input inject, outdated dependencies with a database of over 120k known vulnerable dependency.",
    "version": "1.0.0",
    "publisher": "Ostorlab",
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],
    "tags": [
        "mobile",
        "dast",
        "mast",
        "security",
        "plugin",
        "ostorlab",
        "vulnerability",
        "scan",
        "mobile security",
        "automated scanner",
        "Azure Pipelines",
        "Azure DevOps Extensions",
        "Marketplace"
    ],
    "public": true,
    "categories": [
        "Azure Pipelines"
    ],
    "icons": {
        "default": "images/icon.png"
    },
    "files": [
        {
            "path": "src"
        },
        {
            "path": "images",
            "addressable": true
        },
        {
            "path": "overview.md",
            "addressable": true
        },
        {
            "path": "license-terms.md",
            "addressable": true
        }
    ],
    "contributions": [
        {
            "id": "ostorlab-azure-security-scanner",
            "type": "ms.vss-distributed-task.task",
            "targets": [
                "ms.vss-distributed-task.tasks"
            ],
            "properties": {
                "name": "src"
            }
        }
    ],
    "content": {
        "details": {
            "path": "overview.md"
        },
        "license": {
            "path": "license-terms.md"
        }
    },
    "links": {
        "home": {
            "uri": "https://www.ostorlab.co/"
        },
        "getstarted": {
            "uri": "https://github.com/Ostorlab/ostorlab_azure_devops_extension/blob/master/overview.md"
        },
        "support": {
            "uri": "mailto:support@ostorlab.dev"
        },
        "repository": {
            "uri": "https://github.com/Ostorlab/ostorlab_azure_devops_extension"
        },
        "issues": {
            "uri": "https://github.com/Ostorlab/ostorlab_azure_devops_extension/issues"
        }
    },
    "repository": {
        "type": "git",
        "uri": "https://github.com/Ostorlab/ostorlab_azure_devops_extension"
    },
    "branding": {
        "color": "rgb(00, 153, 255)",
        "theme": "dark"
    },
    "screenshots": [
        {
            "path": "images/basic-config.png"
        },
        {
            "path": "images/advanced-config.png"
        },
        {
            "path": "images/marketplace.png"
        },
        {
            "path": "images/install.png"
        },
        {
            "path": "images/debug.png"
        },
        {
            "path": "images/artifacts.png"
        },
        {
            "path": "images/log.png"
        }
    ]
}